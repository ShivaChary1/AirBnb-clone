<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h1>All listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
        <% for(list of allListings){ %>
            <a href="/listings/<%=list._id%>" class="listing-link">
                <div class="card col">
                    <img src="<%=list.image%>" class="card-img-top" style="height: 20rem;" alt="lsting-image">
                    <div class="card-img-overlay">

                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= list.title %></b>
                            <br>
                            &#8377;<%= list.price%> / night
                        </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
</body>