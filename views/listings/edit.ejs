<% layout("/layouts/boilerplate.ejs") %>
<body>
    <br>
    <br>
    <h2>Edit this listing</h2>
    <form method="POST" novalidate class="needs-validation" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="mb-3" >
            <label class="form-label" for="title">Title</label>
            <input required class="form-control"  type="text" id="title" value="<%= listing.title %>" name="listing1[title]">
            <div class="invalid-feedback">Should not be empty</div>
        </div>
        <div class="mb-3" >
            <label class="form-label" for="desc">Description</label>
            <textarea required class="form-control" name="listing1[description]" id="desc"><%= listing.description %></textarea>
            <div class="invalid-feedback">Should not be empty</div>
        </div>
        <div class="mb-3" >
            <label class="form-label" for="img">Image URL</label>
            <input required class="form-control"  type="text" name="listing1[image]" value="<%=listing.image%>" id="img">
            <div class="invalid-feedback">Should not be empty</div>
        </div>
        <div class="mb-3" >
            <label class="form-label" for="price">Price</label>
            <input  required class="form-control"  type="number" value="<%= listing.price %>" name="listing1[price]" id="price">
            <div class="invalid-feedback">Should not be empty</div>
        </div>
        <div class="mb-3" >
            <label class="form-label" for="country">Country</label>
            <input required class="form-control" value="<%= listing.country %>" type="text" name="listing1[country]" id="country">
            <div class="invalid-feedback">Should not be empty</div>
        </div>
        <div class="mb-3" >
            <label class="form-label" for="location">Location</label>
            <input required class="form-control" value="<%= listing.location %>" type="text" name="listing1[location]" id="location">
            <div class="invalid-feedback">Should not be empty</div>
        </div>
        <button class="btn btn-outline-danger">EDIT</button>
    </form>
    <br>
    <br><br>
</body>